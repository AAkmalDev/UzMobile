<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">


    <ImageView
        android:layout_marginTop="5dp"
        android:src="@drawable/uzmobile_icon"
        app:layout_constraintVertical_chainStyle="packed"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/text_brand"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <TextView
        android:gravity="center"
        android:text="@string/milliy_operator"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:id="@+id/text_mot"
        app:layout_constraintTop_toBottomOf="@id/text_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintTop_toBottomOf="@+id/text_mot"
        app:layout_constraintBottom_toTopOf="@+id/tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="0dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="center"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/view_pager"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout"
        app:tabBackground="@drawable/tab_background"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintWidth_percent="0.88"
        app:layout_constraintHeight_percent="0.37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ussd_request"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="10dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/ic_hash"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text="@string/ussd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tariff"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="10dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/ic_credit_card"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text="@string/tarif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/service"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="13dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/ic_sliders"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text="@string/xizmatlar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/minutes"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="10dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/ic_phone"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text="@string/minut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/internet"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="10dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/ic_earth"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text="@string/internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sms"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:padding="10dp"
                        android:background="@drawable/icon_background"
                        android:src="@drawable/ic_message_square"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:text="@string/sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
   <LinearLayout
       android:orientation="vertical"
       android:id="@+id/linear_layout"
       android:background="@color/white"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintHeight_percent="0.5"
       android:layout_width="0dp"
       android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>